<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Disfruta"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="45sp" />

            <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_redondos_verdes" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:adjustViewBounds="true"
                android:foreground="@drawable/imagen_ovalada"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:adjustViewBounds="true"
                android:foreground="@drawable/imagen_ovalada"
                android:backgroundTint="@color/cremita"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/brocheta_carne" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:adjustViewBounds="true"
                android:foreground="@drawable/imagen_ovalada"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/pastel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:text="Dietas"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="45sp" />

            <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_redondos_verdes" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:columnCount="4"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/vegetariano"
                    android:foreground="@drawable/imagen_ovalada_v"/>


                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="@color/cremita"
                    android:foreground="@drawable/imagen_ovalada_v"
                    android:src="@drawable/vegano" />


            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Comparte tu \n talento"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="45sp" />

            <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_redondos_verdes" />
            
            <ImageButton
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/amasar"
                android:foreground="@drawable/imagen_ovalada"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="De chef a chef"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="45sp" />

            <View
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_redondos_verdes" />

            <Button
                android:layout_height="150dp"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient"
                android:backgroundTint="@color/black"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>